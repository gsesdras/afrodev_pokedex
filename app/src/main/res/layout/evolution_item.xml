<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:id="@+id/clBackground"
    >

    <ImageView
        android:id="@+id/pokemon1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        tools:src="@drawable/pikachu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        />

    <TextView
        android:id="@+id/txtPokemon1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Pokemon Name"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@id/pokemon1"
        app:layout_constraintStart_toStartOf="@id/pokemon1"
        app:layout_constraintTop_toBottomOf="@id/pokemon1"/>

    <ImageView
        android:layout_marginHorizontal="30dp"
        android:id="@+id/arrowRight"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_right_evolutions"
        app:layout_constraintStart_toEndOf="@id/pokemon1"
        app:layout_constraintTop_toTopOf="@id/pokemon1"
        app:layout_constraintBottom_toBottomOf="@id/pokemon1"
        />

    <ImageView
        android:id="@+id/pokemon2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        tools:src="@drawable/pikachu"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/arrowRight"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/txtPokemon2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Pokemon Name"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@id/pokemon2"
        app:layout_constraintStart_toStartOf="@id/pokemon2"
        app:layout_constraintTop_toBottomOf="@id/pokemon2"/>


</androidx.constraintlayout.widget.ConstraintLayout>