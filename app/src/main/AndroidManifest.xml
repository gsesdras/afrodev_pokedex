<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.goiz.pokedex">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_splashscreen"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_splashscreen"
        android:supportsRtl="true"
        android:theme="@style/Theme.Pokedex">
        <activity android:name=".view.About" />
        <activity android:name=".view.PokemonActivity" />
        <activity android:name=".view.HomePageList" />
        <activity android:name=".view.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.MainActivity"
            android:windowSoftInputMode="adjustResize" />
    </application>

</manifest>